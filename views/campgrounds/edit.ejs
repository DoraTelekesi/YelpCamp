<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
      <div>
        <label class="form-label" for="title">Title: </label>
        <input class="form-control" type="text" id="title" value="<%= campground.title  %>" name="campground[title]" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location: </label>
        <input class="form-control" type="text" id="location" value="<%= campground.location  %>" name="campground[location]" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input class="form-control" type="text" id="location" value="<%= campground.image  %>" name="campground[image]" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Campround Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            placeholder="0.00"
            aria-label="Price"
            aria-describedby="price-label"
            value="<%= campground.price  %>"
            name="campground[price]"
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" id="location" name="campground[description]"><%= campground.description  %></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Upgrade Campground</button>
      </div>

      <a href="/campgrounds/<%=campground._id%>">Back To campgrounds</a>
    </form>
  </div>
</div>
